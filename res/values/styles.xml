<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="TabTitleTheme">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/color_text_tab</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:layout_height">@dimen/layout_tab_height</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:animationDuration">400</item>
    </style>

    <style name="AnimationPopupView">
        <item name="android:windowEnterAnimation">@anim/alpha_appear</item>
        <item name="android:windowExitAnimation">@anim/alpha_disappear</item>
    </style>

</resources>